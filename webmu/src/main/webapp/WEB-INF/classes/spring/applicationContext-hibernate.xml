	<!-- fivs-begin -->
	<bean id="dataSource_fivs_w" parent="baseDataSource">
		<property name="url" value="${dataSource_fivs_w.url}" />
		<property name="username" value="${dataSource_fivs_w.username}" />
		<property name="password" value="${dataSource_fivs_w.password}" />
	</bean>

	<bean id="dataSource_fivs_r" parent="baseDataSource">
		<property name="url" value="${dataSource_fivs_w.url}" />
		<property name="username" value="${dataSource_fivs_w.username}" />
		<property name="password" value="${dataSource_fivs_w.password}" />
	</bean>

	<bean id="sessionFactory_fivs" parent="baseSessionFactory"
		abstract="true">
		<property name="packagesToScan">
			<list>
				<value>com.beyeon.hibernate.fivsdb</value>
			</list>
		</property>
	</bean>

	<bean id="sessionFactory_fivs_w" parent="sessionFactory_fivs">
		<property name="dataSource" ref="dataSource_fivs_w" />
	</bean>

	<bean id="sessionFactory_fivs_r" parent="sessionFactory_fivs">
		<property name="dataSource" ref="dataSource_fivs_r" />
	</bean>
